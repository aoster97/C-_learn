{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ 生成活动文件",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				//"${file}",
				"/Volumes/prom/C++_learn/vs_code_C++/code_learn/*.cpp",
				"/Volumes/prom/C++_learn/vs_code_C++/execute/*.cpp",
				"-I",
				"/Volumes/prom/C++_learn/vs_code_C++/include/*.h",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: /usr/bin/g++"
		}
	]
}